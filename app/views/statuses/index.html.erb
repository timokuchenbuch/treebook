<div class="page-header">
  <h1>Alle Statusupdates</h1>
</div>

<%= link_to "Neuen Status posten", new_status_path, class: "btn" %>

<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
    <span class="admin">| <%= link_to "Bearbeiten", edit_status_path(status) %></span> 
    <span class="admin">| <%= link_to "Löschen", status, method: :delete, data: { confirm: "Sind Sie sicher dass Sie den Status löschen möchten?"} %></span>
  </div>
</div>
<% end %>